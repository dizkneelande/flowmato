    <padding>
        <Insets top="50" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="welcome to flowmato yhyhyh drink water fool" style="-fx-font-size: 20pt;"/>

    <VBox spacing="10">
        <Label text="Username:"/>
        <TextField fx:id="usernameField" promptText="Enter your username"/>

        <Label text="Password:"/>
        <TextField fx:id="passwordField" promptText="Enter your password" />

        <Button text="Create Profile" onAction="#createProfile"/>
        <Button text="Select Profile" onAction="#selectProfile"/>
    </VBox>
</VBox>
