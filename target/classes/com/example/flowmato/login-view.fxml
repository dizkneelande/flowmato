<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="360.0" maxWidth="640.0" minHeight="360.0" minWidth="640.0" prefHeight="360" prefWidth="640" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flowmato.controller.LoginController">
    <left>
        <Pane prefHeight="360.0" prefWidth="196.0" style="-fx-background-color: #8FBCBB;" />
    </left>
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 50 20 20 20;">
         <ImageView fitHeight="107.0" fitWidth="89.0" pickOnBounds="true" preserveRatio="true" translateY="20.0">
            <image>
               <Image url="@../../../images/Flowmato.png" />
            </image>
         </ImageView>
            <Pane prefHeight="100" />
            <Label style="-fx-font-size: 24pt; -fx-text-fill: black;" text="Welcome back friend!" translateY="-20.0">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
            <TextField fx:id="emailField" promptText="Email" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #8FBCBB; -fx-border-radius: 5;" translateY="-30.0" />
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #8FBCBB; -fx-border-radius: 5;" translateY="-30.0" />
            <Button onAction="#Login" style="-fx-background-color: #8FBCBB; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 14pt;" text="Login" translateY="-40.0" />
            <Button onAction="#Back" style="-fx-background-color: #8FBCBB; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 14pt;" text="Back" translateY="-50.0" />
        </VBox>
    </center>
</BorderPane>
