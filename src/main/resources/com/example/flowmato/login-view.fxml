<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10" prefWidth="640" prefHeight="360" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="com.example.flowmato.controller.LoginController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="open sesame">
        <font>
            <Font size="40.0" />
        </font></Label>
    <TextField fx:id="emailField" promptText="Email" onKeyTyped="#clearErrorMessage"/>
    <PasswordField fx:id="passwordField" promptText="Password" onKeyTyped="#clearErrorMessage"/>
    <Button text="Login" onAction="#Login"/>
    <Button text="Back" onAction="#Back"/>
    <Label fx:id="errorLabel" text="Invalid credentials, please try again." layoutX="100" layoutY="250" visible="false" textFill="red"/>
</VBox>