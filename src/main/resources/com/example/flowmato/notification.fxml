<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<Group xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flowmato.controller.NotificationController">
   <AnchorPane fx:id="notificationContainer" pickOnBounds="false" prefHeight="360" prefWidth="640">
      <!-- Top Right Notification Box -->
      <StackPane fx:id="toast_top_right" layoutX="426.0" layoutY="14.0" prefHeight="54.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #8FBCBB, white);">
         <children>
            <Label fx:id="toastTopRightText" style="-fx-font-size: 12pt;" text="Notification text here" wrapText="true" />
            <Button mnemonicParsing="false" onAction="#closeNotification" style="-fx-background-color: transparent;" text="✖" translateX="8.0" translateY="-6.0" StackPane.alignment="TOP_RIGHT">
               <font>
                  <Font size="14.0" />
               </font>
               <StackPane.margin>
                  <Insets right="5.0" top="5.0" />
               </StackPane.margin>
            </Button>
         </children>
      </StackPane>
      <!-- Top Left Notification Box -->
      <StackPane fx:id="toast_top_left" layoutX="14.0" layoutY="14.0" prefHeight="54.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #8FBCBB, white);">
         <children>
            <Label fx:id="toastTopLeftText" style="-fx-font-size: 12pt;" text="Notification text here" wrapText="true" />
            <Button mnemonicParsing="false" onAction="#closeNotification" style="-fx-background-color: transparent;" text="✖" translateX="8.0" translateY="-6.0" StackPane.alignment="TOP_RIGHT">
               <font>
                  <Font size="14.0" />
               </font>
               <StackPane.margin>
                  <Insets right="5.0" top="5.0" />
               </StackPane.margin>
            </Button>
         </children>
      </StackPane>
      <!-- Center Banner Notification Box -->
      <StackPane fx:id="banner" layoutX="13.0" layoutY="14.0" prefHeight="54.0" prefWidth="614.0" style="-fx-background-color: #ffffff;">
         <children>
            <Label fx:id="bannerText" style="-fx-font-size: 12pt;" text="Notification text here" wrapText="true" />
            <Button mnemonicParsing="false" onAction="#closeNotification" style="-fx-background-color: transparent;" text="✖" translateX="8.0" translateY="-6.0" StackPane.alignment="TOP_RIGHT">
               <StackPane.margin>
                  <Insets right="5.0" top="5.0" />
               </StackPane.margin>
               <font>
                  <Font size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="CLOSED_HAND" />
               </cursor>
            </Button>
         </children>
      </StackPane>
      <!-- Bottom Banner Notification Box -->
      <StackPane fx:id="banner_bottom" layoutX="10.0" layoutY="289.0" prefHeight="54.0" prefWidth="614.0" style="-fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #8FBCBB, white);" visible="false">
         <children>
            <Label fx:id="bannerBottomText" style="-fx-font-size: 12pt;" text="Notification text here" wrapText="true" />
            <Button mnemonicParsing="false" onAction="#closeNotification" style="-fx-background-color: transparent;" text="✖" translateX="8.0" translateY="-6.0" StackPane.alignment="TOP_RIGHT">
               <StackPane.margin>
                  <Insets right="5.0" top="5.0" />
               </StackPane.margin>
               <font>
                  <Font size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="CLOSED_HAND" />
               </cursor>
            </Button>
         </children>
      </StackPane>
      <!-- Bottom Right Notification Box -->
      <StackPane fx:id="toast_bottom_right" layoutX="426.0" layoutY="292.0" prefHeight="54.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #8FBCBB, white);" visible="false">
         <children>
            <Label fx:id="toastBottomRightText" style="-fx-font-size: 12pt;" text="Notification text here" wrapText="true" />
            <Button mnemonicParsing="false" onAction="#closeNotification" style="-fx-background-color: transparent;" text="✖" translateX="8.0" translateY="-6.0" StackPane.alignment="TOP_RIGHT">
               <font>
                  <Font size="14.0" />
               </font>
               <StackPane.margin>
                  <Insets right="5.0" top="5.0" />
               </StackPane.margin>
            </Button>
         </children>
      </StackPane>
      <!-- Bottom Left Notification Box -->
      <StackPane fx:id="toast_bottom_left" layoutX="14.0" layoutY="292.0" prefHeight="54.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #8FBCBB, white);" visible="false">
         <children>
            <Label fx:id="toastBottomLeftText" style="-fx-font-size: 12pt;" text="Notification text here" wrapText="true" />
            <Button mnemonicParsing="false" onAction="#closeNotification" style="-fx-background-color: transparent;" text="✖" translateX="8.0" translateY="-6.0" StackPane.alignment="TOP_RIGHT">
               <font>
                  <Font size="14.0" />
               </font>
               <StackPane.margin>
                  <Insets right="5.0" top="5.0" />
               </StackPane.margin>
            </Button>
         </children>
      </StackPane>
   </AnchorPane>
</Group>
